# ===========================================
# WINDBREAKER - Solana Copy Trading Bot
# ===========================================

# ---- Network ----
RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
NETWORK=mainnet-beta

# ---- Wallet ----
WALLET_PRIVATE_KEY_BASE58=your_private_key_here

# ---- Wallets to Copy ----
# Get these from Fomo app leaderboard or other sources
COPY_WALLETS=wallet1,wallet2,wallet3

# ---- Trade Settings ----
COPY_MAX_SOL=0.1              # Max SOL per trade
COPY_MIN_SOL=0.05             # Min SOL per trade
SLIPPAGE_BPS=1500             # 15% slippage (needed for meme coins)
COPY_SELLS=true               # Copy sell transactions
COPY_PROPORTIONAL=true        # Match trader's % of wallet

# ---- Position Management ----
MAX_POSITIONS=3               # Max concurrent positions
TAKE_PROFIT_PCT=50            # Sell at 50% profit
STOP_LOSS_PCT=-35             # Sell at 35% loss
TRAILING_STOP_PCT=25          # 25% trailing stop

# ---- Safety Filters (optional) ----
# Set to 0 to disable, or set TRUST_TRADER_PUMPFUN=true to skip all
TRUST_TRADER_PUMPFUN=true     # Trust trader for pump.fun tokens (skip filters)
MIN_MARKET_CAP_USD=0          # Minimum market cap (0 = disabled)
MIN_LIQUIDITY_USD=0           # Minimum liquidity (0 = disabled)
MIN_TOKEN_AGE_MINUTES=0       # Minimum token age (0 = disabled)

# ---- Logging ----
LOG_LEVEL=INFO
