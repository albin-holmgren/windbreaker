# Network
RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_KEY
NETWORK=devnet

# Wallet
WALLET_PRIVATE_KEY_BASE58=    # Exported Phantom private key (base58) â€” DO NOT commit
WALLET_ADDRESS=

# Trading
MIN_PROFIT_PCT=0.5            # 0.5% = minimum net profit threshold
TRADE_AMOUNT_USD=10           # starting trade size in USD equivalent
SLIPPAGE_BPS=50               # 0.5% default
POLL_INTERVAL_MS=500          # 500ms polling (tune for RPC limits)

# Jupiter API
JUPITER_QUOTE_API=https://quote-api.jup.ag/v6/quote
JUPITER_SWAP_API=https://quote-api.jup.ag/v6/swap

# Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Copy Trading
COPY_ENABLED=false                # Set to 'true' to enable copy trading
COPY_WALLETS=                     # Comma-separated wallet addresses to copy
COPY_BALANCE_PCT=50               # Percentage of balance to use per copy trade (if proportional=false)
COPY_MAX_SOL=0.1                  # Maximum SOL per copy trade (hard cap)
COPY_MIN_SOL=0.02                 # Minimum SOL value to trigger a copy
COPY_POLL_INTERVAL_MS=500         # How often to poll wallets (ms)
COPY_SELLS=false                  # Don't copy sells (we auto-sell instead)
COPY_PROPORTIONAL=true            # Match trader's % of wallet (recommended)
EXIT_FEE_RESERVE=0.001            # SOL reserved per position for exit fees (~0.001 per sell)
MIN_MARKET_CAP_USD=20000          # Skip tokens below this market cap (anti-rug filter)
MIN_TOKEN_AGE_MINUTES=15          # Skip tokens younger than this (anti-rug filter)

# Position Management (Clone Strategy)
MAX_POSITIONS=3                   # Maximum concurrent positions
TAKE_PROFIT_PCT=0                 # 0 = disabled (follow trader)
STOP_LOSS_PCT=-95                 # Abandon at 95% loss (don't sell worthless tokens)
TIME_LIMIT_MINUTES=0              # 0 = disabled (follow trader timing)
TRAILING_STOP_PCT=0               # 0 = disabled
RUG_ABANDON_SOL=0.005             # If token worth < 0.005 SOL, abandon (don't waste fees selling)

# Ops
LOG_LEVEL=INFO
