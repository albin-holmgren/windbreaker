# Network
RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_KEY
NETWORK=devnet

# Wallet
WALLET_PRIVATE_KEY_BASE58=    # Exported Phantom private key (base58) â€” DO NOT commit
WALLET_ADDRESS=

# Trading
MIN_PROFIT_PCT=0.5            # 0.5% = minimum net profit threshold
TRADE_AMOUNT_USD=10           # starting trade size in USD equivalent
SLIPPAGE_BPS=50               # 0.5% default
POLL_INTERVAL_MS=500          # 500ms polling (tune for RPC limits)

# Jupiter API
JUPITER_QUOTE_API=https://quote-api.jup.ag/v6/quote
JUPITER_SWAP_API=https://quote-api.jup.ag/v6/swap

# Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Copy Trading (NEW!)
COPY_ENABLED=false                # Set to 'true' to enable copy trading
COPY_WALLETS=                     # Comma-separated wallet addresses to copy
COPY_BALANCE_PCT=50               # Percentage of balance to use per copy trade
COPY_MAX_SOL=0.5                  # Maximum SOL per copy trade
COPY_MIN_SOL=0.05                 # Minimum SOL value to trigger a copy
COPY_POLL_INTERVAL_MS=3000        # How often to poll wallets (ms)
COPY_SELLS=true                   # Whether to copy sells too

# Ops
LOG_LEVEL=INFO
